{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Order index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Customer</th>
                <th>Song</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.Customer.Name }}</td>
                <td>{{ order.Song.Name }}</td>
                <td>{{ order.Date ? order.Date|date('Y-m-d H:i:s') : '' }}</td>
                <td style="text-align:center;">
                    <a class="button-58" href="{{ path('app_order_show', {'id': order.id}) }}">show</a>
                    <a class="button-58" href="{{ path('app_order_edit', {'id': order.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="button-66" href="{{ path('app_order_new') }}">Create new</a>
    <a style="position:relative; top:10px;"class="button-24" href="{{ path('home') }}">Back To Home</a>
{% endblock %}
