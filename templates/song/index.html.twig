{% extends 'base.html.twig' %}

{% block title %}Song index{% endblock %}

{% block body %}
    <h1>Song index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Category</th>
                <th>Artist</th>
                <th>Price</th>
                <th>Song_URL</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for song in songs %}
            <tr>
                <td>{{ song.id }}</td>
                <td>{{ song.Name }}</td>
                <td>{{ song.Category.Name }}</td>
                <td>{{ song.Artist.Name }}</td>
                <td>{{ song.Price }} $</td>
                <td width="700" height="120"><iframe width="100%" height="120" src="{{ song.SongURL }}" frameborder="0" allow="autoplay"></iframe></td>
                <td>
                    <a href="{{ path('app_song_show', {'id': song.id}) }}">show</a>
                    <a href="{{ path('app_song_edit', {'id': song.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_song_new') }}">Create new</a>
{% endblock %}
