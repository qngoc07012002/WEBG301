{% extends 'base.html.twig' %}

{% block title %}Song{% endblock %}

{% block body %}
    <h1>Song</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ song.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ song.Name }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ song.Category.Name }} - {{ song.Category }}</td>
            </tr>
            <tr>
                <th>Artist</th>
                <td>{{ song.Artist.Name }} - {{ song.Artist }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ song.Price }}</td>
            </tr>
            <tr>
                <th>Song_URL</th>
                <td>{{ song.SongURL }}</td>
            </tr>
        </tbody>
    </table>

    <a style="width:100px;" class="button-58" href="{{ path('app_song_index') }}">back to list</a>

    <a style="width:100px; position: relative; top:10px;" class="button-58" href="{{ path('app_song_edit', {'id': song.id}) }}">edit</a>

   
{% endblock %}
