{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.Name }}</td>
                <td>
                    <a class="button-58" href="{{ path('app_category_show', {'id': category.id}) }}">show</a>
                    <a class="button-58" href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="button-66" href="{{ path('app_category_new') }}">Create new</a>
    <a style="position:relative; top:10px;"class="button-24" href="{{ path('home') }}">Back To Home</a>
{% endblock %}
