{% extends 'base.html.twig' %}

{% block title %}Artist index{% endblock %}

{% block body %}
    <h1>Artist index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artist in artists %}
            <tr>
                <td>{{ artist.id }}</td>
                <td>{{ artist.Name }}</td>
                <td>
                    <a class="button-58" href="{{ path('app_artist_show', {'id': artist.id}) }}">show</a>
                    <a class="button-58" href="{{ path('app_artist_edit', {'id': artist.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="button-66" href="{{ path('app_artist_new') }}">Create new</a>
    <a style="position:relative; top:10px;"class="button-24" href="{{ path('home') }}">Back To Home</a>
{% endblock %}
